{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "typeRoots": ["./src/lib/types"],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@/*": ["./src/*"]
  }
}
